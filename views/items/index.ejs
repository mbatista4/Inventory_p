<h2>Search Items</h2>

<form action="/items" method="get">
    <div class="form-row">
        <div class="form-item">
            <label>Name</label>
            <input type="text" name="name" value="<%=// searchOptions.title || '' %>">
        </div>
    </div>
    <div class="">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
<br>
<div class="item-grid ">
    <% items.forEach(item => { %>
    <a href="/items/<%= item.id %>">
        <img class="item-cover" src=" <%=item.coverImagePath%>" alt="">
    </a>
    <% }) %>
</div>